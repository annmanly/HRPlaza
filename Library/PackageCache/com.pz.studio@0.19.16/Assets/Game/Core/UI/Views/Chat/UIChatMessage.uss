.chat-message {
    align-items: flex-start;
}

.chat-message #_label {
    white-space: normal;
    font-size: 15px;
    text-shadow: 0 1px 8px rgba(27, 24, 42, 0.8);
    border-radius: 6px;
    margin-left: 6px;
}

.rtl .chat-message #_label {
    margin-right: 6px;
    margin-left: initial;

}

.chat-message.chat-event--whisper {
    -unity-font-style: italic;
}

.chat-message.chat-event--color-default #_label {
    color: var(--color-fishbase-whitefish);
}

.chat-message.chat-event--color-default.chat-event--whisper #_label {
    color: var(--color-fishbase-whitefish);
}

.chat-message.chat-event--color-self #_label {
    color: var(--color-fishbase-whitefish);
}


.chat-message.chat-event--color-bot #_label {
    color: var(--color-fishbase-whitefish);
}

.chat-message.chat-event--color-owner #_label {
    color: var(--color-fishbase-whitefish);
}

.chat-message.chat-event--color-moderator #_label {
    color: var(--color-fishbase-whitefish);
}

.chat-message.chat-event--color-staff #_label {
    color: var(--color-fishbase-whitefish);
}

.chat-message.chat-event--color-system #_label {
    color: var(--color-fishbase-whitefish);
    -unity-font-style: italic;
}

.chat-message.chat-event--color-roomboost #_label {
    color: var(--color-fishbase-catfish);
    -unity-font-style: bold-and-italic;
    background-color: var(--color-tertiary-strawberry);
    padding: 2px 8px;
    margin-left: initial;
    text-shadow: initial;
}

.chat-message.chat-event--color-tip #_label {
    color: #F5AF03;
    -unity-font-style: bold-and-italic;
    background-color: var(--color-fishbase-eel);
    padding: 2px 8px;
    margin-left: initial;
    text-shadow: initial;
}
