.modal {
    flex-grow: 1;
}

.modal__content {
    flex-grow: 1;
}

.modal__content .reward-animation,
.modal__content .event-reward-animation,
.modal__content .gacha-animation {
    flex-grow: 1;
}

.modal__content .panel-controller-modal {
    height: 80%;
    width: 800px;
    max-width: 100%;
    flex-grow: 0;
    align-self: center;
    margin-top: auto;
    margin-bottom: auto;
    border-radius: 20px;
    overflow: hidden;
    border-width: 1px;
    border-color: var(--color-fishbase-tuna);
}

.landscape .modal__content .panel-controller-closet{
    background-color: var(--color-fishbase-eel);
}

.modal__content .panel-controller-media-picker {
    width: var(--feed-media-size);
}

.modal__content .panel-controller-modal .landscape-narrow {
    width: 100%;
}

.modal__content .panel-controller-modal .navigation-controller__close > UIImage {
    --unity-image-tint-color: var(--color-fishbase-whitefish);
}

.modal__content .navigation-controller__header-safe-area {
    height: 0;
}


