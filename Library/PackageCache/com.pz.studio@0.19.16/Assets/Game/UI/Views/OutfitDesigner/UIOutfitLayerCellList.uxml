<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:hr="Highrise.UI"
    xmlns:editor="UnityEditor.UIElements"
    xsi:noNamespaceSchemaLocation="../../../../../UIElementsSchema/UIElements.xsd"
>

  <hr:UIOutfitLayerCellList class="outfit-layer-cell-list flex-grow">
    <VisualElement class="outfit-layer-cell-list__info-bar">
      <hr:UIImage class="icon-info" />
      <hr:UILabel key="drag_to_rearrange_items" />
      <hr:UIImage class="icon-close" />
    </VisualElement>
    <hr:UICollection class="flex-grow">
        <hr:UICollectionSection>
          <hr:UICollectionCells name="_itemGrid" layout="grid" layout-spacing="6"/>
        </hr:UICollectionSection>
    </hr:UICollection>
  </hr:UIOutfitLayerCellList>
</UXML>