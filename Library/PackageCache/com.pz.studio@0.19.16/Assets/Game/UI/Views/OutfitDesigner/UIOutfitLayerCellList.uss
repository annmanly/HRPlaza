.outfit-layer-cell-list .collection-section {
    padding-left: 16px;
    padding-right: 16px;
}

.outfit-layer-cell-list UIOutfitLayerCell {
    width: var(--4-column-item-min-width);
    height: var(--4-column-item-min-width);
    max-width: var(--4-column-item-max-width);
    max-height: var(--4-column-item-max-width);
}

.outfit-layer-cell-list UIItemCell {
    width: 100%;
    height: 100%;
}

.outfit-layer-cell-list__info-bar {
    background-color: var(--color-fishbase-catfish);
    margin: 12px;
    border-radius: 8px;
    height: 36px;
    align-items: center;
    justify-content: center;
    flex-direction: row;
    padding-left: 12px;
    padding-right: 12px;
}

.outfit-layer-cell-list__info-bar UILabel {
    color: var(--color-fishbase-anchovy);
    font-size: 13px;
    margin-left: 6px;
    flex: 1;
}

.outfit-layer-cell-list__info-bar UIImage {
    width: 16px;
    height: 16px;
}

.outfit-layer-cell-list__info-bar UIImage {
    --unity-image-tint-color: var(--color-fishbase-anchovy);
}
