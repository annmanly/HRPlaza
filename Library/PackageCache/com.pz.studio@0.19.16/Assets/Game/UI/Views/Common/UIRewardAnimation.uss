.reward-animation {
    flex-grow: 1;
    background-color: var(--color-fishbase-blackfish);
}

.reward-animation #_openAllButton {
    display: none;
    margin-top: 6px;
    margin-right: 15px;
}

.reward-animation #_selectGiftButton {
    display: none;
    height: 44px;
    margin: 16px;
    padding: 0px;
}

.reward-animation #_giftExchangingContainer {
    margin-left: 16px;
    margin-right: 16px;
    margin-bottom: 16px;
    display: none;
}

.reward-animation #_giftExchangingLabel {
    color: var(--color-fishbase-bonito);
    font-size: 13px;
    -unity-text-align: middle-center;
    white-space: normal;
}

.reward-animation #_giftExchangingButton {
    height: 44px;
    margin-top: 12px;
}

.reward-animation #_gotItButton {
    height: 44px;
    margin-top: 12px;
}

.reward-animation .reward-animation-parent-image-container {
    margin-top: 69px;
    align-items: center;
}

.reward-animation .reward-animation-parent-image {
    width: 75px;
    height: 75px;
}

.reward-animation #_laterButton,
.reward-animation #_openContainerButton,
.reward-animation #_hatchButton {
    height: 44px;
    margin: 8px 16px;
    padding: 0;
    display: none;
}

.reward-animation #_laterButton .button__content {
    align-items: center;
}

.reward-animation #_iconMyItems {
    margin-right: 4px;
    --unity-image-tint-color: var(--color-fishbase-bonito);
}

.reward-animation .reward-animation-top-buttons {
    flex-direction: row;
    margin-left: 16px;
    margin-right: 16px;
    align-items: center;
}

.reward-animation #_infoButton {
    display: none;
}

