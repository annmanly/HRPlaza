.dropdown-button {
    flex-grow: 1;
    min-width: 60px;
    max-width: 150px;
    height: 20px;
    border-width: 1px;
    margin-right: 4px;
    flex-direction: row;
    border-color: var(--unity-colors-dropdown-background);
    border-radius: var(--border-radius-small);
    align-items: center;
}

.dropdown-button:hover {
    border-color: var(--color-accents-primary);
}

.dropdown-button Label {
    margin-left: 2px;
    text-overflow: clip;
    white-space: nowrap;
    overflow: hidden;
    flex-shrink: 2;
}

.dropdown-button Image {
    width: 12px;
    height: 12px;
    margin-left: auto;
    margin-right: 4px;
    --unity-image: resource("d_icon dropdown");
}

.dropdown-panel {
    flex-grow: 1;
    position: absolute;
    background-color: #242424;
    border-width: 1px;
    border-color: var(--unity-colors-dropdown-background);
    min-width: 140px;
}

.dropdown-item {
    height: 20px;
    flex-direction: row;
    align-items: center;
}

.dropdown-item:hover {
    background-color: #3a3a3a;
}

.dropdown-item .unity-image {
    width: 16px;
    height: 16px;
    margin-right: 2px;
    margin-left: 2px;
    --unity-image: url("project://database/Packages/com.pz.studio/Editor/UI/Icons/icon_categories_new.png");
    --unity-image-tint-color: white;
}

.dropdown-item #selectedImage {
    margin-left: auto;
    --unity-image: url("project://database/Packages/com.pz.studio/Assets/Sprites/Icons/IconCheckmark.png");
}

.dropdown-item:checked{
    background-color: var(--color-accents-primary-60);
}

.dropdown-item .unity-text-element {
    font-size: 13px;
    color: var(--color-fishbase-bonito);
    -unity-text-align: middle-left;
}

