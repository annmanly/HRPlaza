.behaviour-display-list {
    flex-grow: 1;
}

.behaviour-display-list Toolbar {
    height: var(--unity-metrics-toolbar-height);
    flex-direction: row;
    border-bottom-width: .5px;
    border-top-width: .5px;
    border-color: var(--unity-colors-toolbar-border);
}

.behaviour-display-list ToolbarSearchField {
    flex-grow: 1;
    margin: auto 4px;
}

.behaviour-display-list UICollection {
    flex-grow: 1;
}

.behaviour-display-list UICollectionSection {
    padding: 8px;
    padding-right: 16px;
}

.behaviour-display-list UICollection .unity-scroll-view {
}

.behaviour-display-item {
    height: 22px;
    flex-direction: row;
    align-items: center;
}

.behaviour-display-item:hover {
    background-color: var(--unity-colors-highlight-background-hover);
}

.behaviour-display-item:checked {
    background-color: var(--unity-colors-highlight-background);
}

.behaviour-display-item Image {
    margin-right: 4px;
    width: 16px;
    height: 16px;
}

.behaviour-display-item > .unity-label {
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 14px;
    -unity-text-align: middle-center;
}

.behaviour-display-item > .unity-label:hover {
    color: white;
}