.settings-overlay {
    width: 250px;
    height: 250px;
}

.overlay-title {
    margin-bottom: 4px;
}

.settings-overlay .row {
    flex-direction: row;
    align-items: center;
}

.settings-overlay #_settingsPanel {
    margin-top: 12px;
}

.settings-overlay #_searchField {
    width: 200px;
}

.settings-overlay #_cameraDisplay, #_skyboxDisplay, #_inputDisplay {
    flex-direction: row;
    margin-bottom: 10px;
}

.settings-overlay #_gotoMainPanelButton{
    margin-left: auto;
    margin-right: 5px;
}

.settings-overlay .heart-toggle  > .unity-toggle__input > .unity-toggle__checkmark {
    background-image: url("project://database/Packages/com.pz.studio/Editor/UI/Icons/icon_like_empty.png");
    width:16px;
    height:16px;
    padding: 2px;
}

.settings-overlay .heart-toggle:checked  > .unity-toggle__input > .unity-toggle__checkmark {
    background-image: url("project://database/Packages/com.pz.studio/Editor/UI/Icons/icon_heart_white_full.png");
}

.settings-overlay #_goldBalanceArea {
    flex-direction: row;
    align-items: center;
    margin-left: auto;
    margin-right: 5px;
}

.settings-overlay .goldIcon {
    width:20px;
    height:20px;
    padding: 2px;
    --unity-image: url("project://database/Packages/com.pz.studio/Editor/UI/Icons/gold_asset_store.png")
}

.settings-overlay .panel {
    height: 450px;
}

.overlay-label {
    font-size: 13px;
    min-width: 100px;
    white-space: nowrap;
    color: var(--color-fishbase-bonito);
    -unity-text-align: middle-left;
    -unity-font-style: bold;
    margin-left: 6px;
}

/* 
    Dropdown
*/

#_dropdownListener {
    width: 100%;
    height: 100%;
    position:absolute;
}

.settings-overlay .dropdown-button {
    height: 28px;
    width: 130px;
}

#Standard Image, #FirstPerson Image, #ThirdPerson Image, #2DCamera Image {
    --unity-image: resource("Camera Icon");
}

#TapToMove Image {
    --unity-image: resource("d_scenepicking_pickable_hover");
}

#Joystick Image {
    --unity-image: resource("d_Shadow Icon");
}

/* 
    Color Field
*/

.settings-overlay .inspector-field Label {
    -unity-font-style: bold ;
    min-width: 96px;
    flex-grow: 0;
    margin-left: 6px;
}

.settings-overlay .inspector-color-field-background {
    border-color: var(--unity-colors-dropdown-background);
    background-color: rgba(0,0,0,0);
}