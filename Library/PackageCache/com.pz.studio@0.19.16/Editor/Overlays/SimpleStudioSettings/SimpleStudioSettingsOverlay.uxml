<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:editor="UnityEditor.UIElements"
    xmlns:hr="Highrise.UI"
    xsi:noNamespaceSchemaLocation="../../../../../UIElementsSchema/UIElements.xsd"
>
    <VisualElement class="settings-overlay">
        <VisualElement class="row">
            <Label name="_titleLabel" text="Settings" class="overlay-title" />
        </VisualElement>

        <VisualElement name="_settingsPanel">
            <VisualElement name="_cameraDisplay">
                <Label text="Camera" class="overlay-label" />
            </VisualElement>

            <VisualElement name="_inputDisplay">
                <Label text="Input Method" class="overlay-label" />
            </VisualElement>

            <VisualElement name="_skyboxDisplay">
            </VisualElement>
        </VisualElement>

        <VisualElement name="_dropdownListener"/>
    </VisualElement>
</UXML>