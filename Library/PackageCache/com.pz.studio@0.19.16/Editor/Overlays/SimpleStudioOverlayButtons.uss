#simple-studio-button-container {
	position: absolute;
	left: 10px;
	bottom: 20px;
	width: 200px;
}

.simple-studio-button-container{
	flex-direction: row;
}

.simple-studio-button-container .simple-studio-button {
	width: 75px;
	height: 75px;
	margin-left: 10px;
	border-radius: 40px;
	border-color: rgba(100, 100, 100, 0.8);
	border-width: 6px;
	background-color: rgba(30, 30, 30, 0.8);
	align-items: center;
	justify-content: center;
}

.simple-studio-button-container .simple-studio-button:hover {
	background-color: rgba(50, 50, 50, 0.8);
}

.simple-studio-button-container Button > .unity-image {
	--unity-image-tint-color: rgba(140, 140, 140, 0.8);
	width: 70%;
	height: 70%;
}

.simple-studio-button-container Button:hover > .unity-image {
	width: 90%;
	height: 90%;
}

.simple-studio-button-container #asset-catalog-button > .unity-image {
	--unity-image: url("project://database/Packages/com.pz.studio/Editor/UI/Icons/icon_add.png");
}

.simple-studio-button-container #settings-button > .unity-image {
	--unity-image: url("project://database/Packages/com.pz.studio/Editor/Icons/IconSettings.png");
}