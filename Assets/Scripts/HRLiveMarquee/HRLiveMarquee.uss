.billboard {
    width: 100%;
    height: 100%;
    background-color: black;
}

.timer-container {

}

.timer-label {
    -unity-text-align: middle-center;
    font-size: 100px;
    -unity-font-style: bold; 
    -unity-font-definition: var(--font-bold);
    color: white;
    top: 20px;
}

.billboard-display {
    width: 1200px;
    height: 400px;
    position: absolute;
    top: 160px;
    align-self: center;
}

.hidden {
  display: none;
}

